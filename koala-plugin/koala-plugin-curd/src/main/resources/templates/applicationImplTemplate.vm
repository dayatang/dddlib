	@Transactional(propagation = Propagation.SUPPORTS, readOnly = true)
	public ${currntVO} get${domainClass}(Long id) {
		${domainClass} $variableName = ${domainClass}.load(${domainClass}.class, id);
		${currntVO} ${currntVOVariable} = new ${currntVO}();
		${currntVOVariable}.domain2Dto(${variableName});
		${currntVOVariable}.setId(${variableName}.getId());
		return ${currntVOVariable};
	}
	
	public ${currntVO} save${domainClass}(${currntVO} ${currntVOVariable}) {
		${domainClass} ${variableName} = new ${domainClass}();
		${currntVOVariable}.dto2Domain(${variableName});
		${variableName}.save();
		${currntVOVariable}.setId(${variableName}.getId());
		return ${currntVOVariable};
	}
	
	public void update${domainClass}(${currntVO} ${currntVOVariable}) {
		${domainClass} ${variableName} = ${domainClass}.get(${domainClass}.class, ${currntVOVariable}.getId());
		${currntVOVariable}.dto2Domain(${variableName});
	}
	
	public void remove${domainClass}(Long id) {
		this.remove${domainClass}s(new Long[] { id });
	}
	
	public void remove${domainClass}s(Long[] ids) {
		for (int i = 0; i < ids.length; i++) {
			${domainClass} ${variableName} = ${domainClass}.load(${domainClass}.class, ids[i]);
			${variableName}.remove();
		}
	}
	
	@Transactional(propagation = Propagation.SUPPORTS, readOnly = true)
