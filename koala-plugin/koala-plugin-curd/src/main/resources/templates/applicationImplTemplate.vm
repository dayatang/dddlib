		for (${domainClass} ${variableName} : all) {
			${currntVO} ${currntVOVariable} = new ${currntVO}();
			${currntVOVariable}.domain2Dto(${variableName});
			list.add(${currntVOVariable});
		}
		return list;
	}
	
